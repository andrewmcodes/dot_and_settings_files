[user]
	signingkey = XXXXX
	name = Andrew Mason
	email = andrewmcodes@protonmail.com
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/andrew.mason/.gitignore_global
	editor = code --wait
[alias]
	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	# Pretty log output
	hist = log --graph --pretty=format:'%Cred%h%Creset %s%C(yellow)%d%Creset %Cgreen(%cr)%Creset [%an]' --abbrev-commit --date=relative
	c = commit
	s = status
	ch = checkout
[color]
	# Use colors in Git commands that are capable of colored output when outputting to the terminal
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[branch "master"]
	# Use `origin` as the default remote on the `master` branch in all cases
	remote = origin
	merge = refs/heads/master
[branch "main"]
	# Use `origin` as the default remote on the `main` branch in all cases
	remote = origin
	merge = refs/heads/main
[credential]
	helper = cache --timeout=86400
[commit]
	gpgsign = true
[push]
	default = simple
	followTags = true
[tag]
	gpgsign = false
[init]
	defaultBranch = main
[pull]
	rebase = true
