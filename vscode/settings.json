{
  // Workbench
  "workbench.editor.showTabs": true,
  "workbench.colorTheme": "One Dark Pro Vivid",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "editor.background": "#1a1c20",
    "editorIndentGuide.activeBackground": "#b83957",
    "tab.activeBorderTop": "#b83957"
  },
  // Font
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.2,
  "editor.fontWeight": "400",
  // Cursor
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 5,
  "editor.cursorBlinking": "solid",
  // Tabs & Spaces
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Rulers
  "editor.rulers": [
    120
  ],
  // VSCode Specific
  "breadcrumbs.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.enabled": false,
  // Terminal
  "terminal.external.osxExec": "Archipelago.app",
  "terminal.integrated.shell.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  // Saving
  "files.autoSave": "onFocusChange",
  // Emmet
  "emmet.includeLanguages": {
    "html": "html",
    "erb": "erb",
    "javascript": "javascriptreact",
    "vue": "html",
    "ejs": "html",
    "xml": {
      "attr_quotes": "single"
    }
  },
  // Spotify
  "spotify.showToggleRepeatingButton": true,
  "spotify.showToggleShufflingButton": true,
  // Ruby
  "ruby.lintDebounceTime": 1500,
  "ruby.codeCompletion": "rcodetools",
  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,
  "railsPartial.viewFileExtensions": ["html.haml", "html.slim", "html.erb"],
  //   GIT
  "git.enableSmartCommit": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.gitExplorer.files.layout": "auto",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },
  "git.autofetch": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  // JS
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": true,
  // Prettier
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,
  // Format
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 750,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.autoIndent": true,

  "ruby.format": "rubocop",
  "ruby.lint": {
    "ruby": true,
    "rubocop": {
      "rails": true,
    }
  },
  "[sass]": {
    "editor.formatOnSave": false,
  },
  "[yaml]": {
    "editor.formatOnSave": false,
  },
  "[ruby]": {
    "editor.formatOnSave": false,
  },
  "[json]": {
    "editor.formatOnSave": false,
  },
  "[typescript]": {
    "editor.formatOnSave": false,
  },
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  "workbench.iconTheme": "vscode-great-icons",
  "github.hosts": [{
    "host": "https://github.com",
    "username": "oauth",
    "token": "system"
  }],
  "window.zoomLevel": 0,
  // "css.validate": false, // Disable css built-in lint
  // "stylelint.enable": true, // Enable sytlelint

}
